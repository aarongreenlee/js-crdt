{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "interface-name": [true, "never-prefix"],
    "max-classes-per-file": [true, 5],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "any",
        "named-imports-order": "any"
      }
    ],
    "no-shadowed-variable": [
      false,
      {
        "class": true,
        "enum": true,
        "function": true,
        "interface": true,
        "namespace": true,
        "typeAlias": true,
        "typeParameter": true
      }
    ]
  },
  "rulesDirectory": []
}
